{
    "name": "vantjs",
    "version": "1.0.0",
    "description": "platform independent javascript/typescript interface to Davis Vantage Pro, Pro 2 and Vue",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "type": "commonjs",
    "scripts": {
        "watch": "npx tsc --watch",
        "start": "cd ./dist && node ",
        "lint": "npx eslint . --ext .js,.jsx,.ts,.tsx",
        "docs": "npx typedoc --options typedoc.json",
        "watch-docs": "npx typedoc --options typedoc.json --watch",
        "clear-dist": "rmdir /s dist && npx tsc"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/harrydehix/vantjs.git"
    },
    "keywords": [
        "davis vantage pro",
        "davis vantage vue",
        "davis vantage pro 2",
        "vantjs",
        "javascript vantage",
        "driver",
        "interface"
    ],
    "author": "Henri Hollmann",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/harrydehix/vantjs/issues"
    },
    "homepage": "https://github.com/harrydehix/vantjs#readme",
    "dependencies": {
        "@types/serialport": "^8.0.2",
        "crc-full": "^1.1.0",
        "lodash.clonedeep": "^4.5.0",
        "lodash.merge": "^4.6.2",
        "lodash.mergewith": "^4.6.2",
        "serialport": "^10.4.0",
        "source-map-support": "^0.5.21",
        "sprintf-js": "^1.0.3",
        "tiny-typed-emitter": "^2.1.0"
    },
    "devDependencies": {
        "@types/lodash.clonedeep": "^4.5.6",
        "@types/lodash.merge": "^4.6.6",
        "@types/lodash.mergewith": "^4.6.6",
        "@types/node": "^15.14.9",
        "@types/sprintf-js": "^1.1.2",
        "@typescript-eslint/eslint-plugin": "^4.28.1",
        "@typescript-eslint/parser": "^4.28.1",
        "eslint": "^7.29.0",
        "ts-node": "^10.0.0",
        "typedoc": "^0.22.13",
        "typedoc-plugin-no-inherit": "^1.3.1",
        "typescript": "^4.6.2"
    },
    "eslintConfig": {
        "rules": {
            "no-case-declarations": 0,
            "@typescript-eslint/no-case-declarations": 0
        }
    }
}
